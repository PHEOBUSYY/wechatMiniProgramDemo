/* pages/main.wxss */

.container {
  flex-direction: column;
  margin-top: 5px;
  position: relative;
}

.item {
  width: 100%;
  text-align: left;
  display: flex;
  flex-direction: row;
  padding: 1rem 1rem;
  background: #f3f3f3;
  margin-bottom: 5px;
  align-items: center;
}

.image {
  width: 64px;
  height: 64px;
  border-radius: 3px;
}


.text_title {
  display: block;
  width: 100%;
  padding: 5px;
  font-size: 16px;
  font-weight: 500;
}

.text_content {
  display: block;
  width: 100%;
  padding: 5px;
  font-size: 14px;
  font-weight: 400;

}

.scroll {
  position: relative;
  height: 100%;
}
.createBtn {
  width: 90%;
  background: #32B1C7;
  color: #FFFFFF;
}
.media_content{
  margin: 0 1rem;
}
