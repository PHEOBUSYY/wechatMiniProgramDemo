/* pages/main.wxss */

.container {
  flex-direction: column;
  margin-top: 5px;
  position: relative;
}

.item {
  width: 100%;
  text-align: left;
  display: flex;
  flex-direction: row;
  padding: 5px 5px;
  background: #f3f3f3;
  margin-bottom: 5px;
  align-items: center;
}

.image {
  width: 40px;
  height: 40px;
}

.text {
  text-align: center;
  margin: 3px;
  line-height: 40px;
}

.subTitle {
  width: 100%;
  padding: 5px;
  background: red;
}

.subTitle2 {
  width: 100%;
  position: fixed;
  background: blue;
  padding: 5px;
  top: 0;
}

.scroll {
  position: relative;
  height: 100%;
}
